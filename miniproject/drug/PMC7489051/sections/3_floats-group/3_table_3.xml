  <thead>
   <tr>
    <th style="border:none;" align="center">no.</th>
    <th style="border:none;" align="center">compd</th>
    <th style="border:none;" align="center">reported mechanism of action</th>
    <th style="border:none;" align="center">
     <italic>in vitro</italic>/
     <italic>in vivo</italic>
    </th>
    <th style="border:none;" align="center">effect</th>
    <th style="border:none;" align="center">CoV type</th>
    <th style="border:none;" align="center">ref</th>
   </tr>
