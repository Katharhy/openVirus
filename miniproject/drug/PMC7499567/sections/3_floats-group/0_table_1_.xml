<?xml version="1.0" encoding="UTF-8"?>
<table-wrap id="tbl1" orientation="portrait" position="float">
 <label>Table 1.</label>
 <caption>
  <p>Influenza pandemics in the last 100 years.</p>
 </caption>
 <table frame="hsides" rules="groups">
  <thead>
   <tr>
    <th align="left" rowspan="1" colspan="1">Name of the pandemic</th>
    <th align="left" rowspan="1" colspan="1">Years</th>
    <th align="left" rowspan="1" colspan="1">Strain</th>
    <th align="left" rowspan="1" colspan="1">Number of deaths (millions)</th>
   </tr>
  </thead>
  <tbody>
   <tr>
    <td rowspan="1" colspan="1">Spanish flu</td>
    <td align="center" valign="middle" rowspan="1" colspan="1">1918–1920</td>
    <td rowspan="1" colspan="1">H1N1</td>
    <td align="center" rowspan="1" colspan="1">40–50</td>
   </tr>
   <tr>
    <td rowspan="1" colspan="1">Asian flu</td>
    <td align="center" rowspan="1" colspan="1">1957–1958</td>
    <td rowspan="1" colspan="1">H2N2</td>
    <td align="center" rowspan="1" colspan="1">1–2</td>
   </tr>
   <tr>
    <td rowspan="1" colspan="1">Hong Kong flu</td>
    <td align="center" rowspan="1" colspan="1">1968–1970</td>
    <td rowspan="1" colspan="1">H3N2</td>
    <td align="center" rowspan="1" colspan="1">0.5–2</td>
   </tr>
   <tr>
    <td rowspan="1" colspan="1">Swine flu</td>
    <td align="center" rowspan="1" colspan="1">2009–2010</td>
    <td rowspan="1" colspan="1">H1N1</td>
    <td align="center" rowspan="1" colspan="1">0.5</td>
   </tr>
  </tbody>
 </table>
</table-wrap>
